# schoolwork-code

#include "stdafx.h"

#include "iostream"

using namespace std;

void main( )

{   

   int a,b,c,d,i,j;

	int max=0;	cout<<"please input four numbers:";

	cin>>a>>b>>c>>d;

	cout<<endl;

	int p[4]={a,b,c,d};

	for(i=0;i<3;i++){ 

		max=p[i]; 

		for(j=i+1;j<=3;j++){ 

			if(p[j]>max){ 

				p[i]=p[j];

				p[j]=max;

				max=p[i];}    }

}
